{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "ES2019",
		"lib": ["ESNext"],
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"sourceMap": true,
		"outDir": "out",
		"baseUrl": "src",
		"paths": {
			"*": ["*"]
		},
		"plugins": [
			{
				"transform": "typescript-transform-paths",
				"exclude": ["**/node_modules/**"]
			},
			{
				"transform": "typescript-transform-paths",
				"exclude": ["**/node_modules/**"],
				"afterDeclarations": true
			}
		]
	}
}
